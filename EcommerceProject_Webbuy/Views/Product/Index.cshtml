@model IEnumerable<EcommerceProject_Webbuy.Models.ViewModel.ProductListViewModel>

@{
    ViewBag.Title = "Index";
    int counter = 0;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title All Products - Modern Living </title>
    <link rel="stylesheet" href="~/Content/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>

<body>
    <div class="row">
        @foreach (var item in Model)
        {
            if (counter != 0 && counter % 3 == 0)
            {
            @:</div>
            @:<div class="row">
            }

            <div class="col-md-4">
                <div class="thumbnail">
                    <img src="@Url.Content(item.Product_Image)" alt="not visible" data-holder-rendered="true" style="height: 200px; width: 100%; display: block;" />
                    <div class="caption">
                        <h3 id="thumbnail-label">@Html.DisplayFor(modelItem => item.Product_Name)</h3>
                        <p>Rs @Html.DisplayFor(modelItem => item.Price)</p>
                    </div>
                </div>
            </div>

            counter++;
        }
    </div>
   
</body>
</html>